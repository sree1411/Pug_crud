html
  head
    title= "pug" 
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    h1= "pug documentation"
    a(href="/addReviewForm") Add Review
    each review,i in reviews 
     table(class="table table-bordered mt-3") 
       tr 
        th Name   
        td=review.fullname
       tr 
        th rating  
        td=review.rating
       tr 
        th review  
        td=review.review
       tr 
        th Delete 
        td 
          button 
           a(href=`/deleteId/${i}`) Delete
       tr 
        th Edit 
        td 
          button 
           a(href=`/editForm/${i}`) Edit   